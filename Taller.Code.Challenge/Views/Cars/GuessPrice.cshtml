@model IEnumerable<Car>

@{
	ViewData["Title"] = "Guess Cars Prices";
}

<div class="text-center">
	<form asp-action="GuessCarPrice" method="post">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th></th>
					<th>#</th>
					<th>Make</th>
					<th>Model</th>
					<th>Year</th>
					<th>Doors</th>
					<th>Color</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var car in Model)
				{
					<tr>
						<td>
							<input name="id" type="checkbox" value="@car.Id" />
						</td>
						<td>@car.Id</td>
						<td>@car.Make</td>
						<td>@car.Model</td>
						<td>@car.Year</td>
						<td>@car.Doors</td>
						<td>@car.Color</td>
					</tr> 
				}
			</tbody>
		</table>
		<br />
		<div class="row">
			<div class="col-8">
				<input type="text" class="form-control" name="inputPrice" />
			</div>
			<div class="col-4">
				<input type="submit" value="submit" class="btn btn-primary" />
			</div>
		</div>
	</form>
	<br />
	@if (TempData["IsInRange"] != null && (bool)TempData["IsInRange"])
	{
		<p class="text-success">Great Job!</p>
	}
</div>

